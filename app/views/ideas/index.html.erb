<h1>Listing ideas</h1>
<%= link_to 'Nowy pomysł', new_idea_path, class: "btn btn-primary btn-lg active" %>

<table class="table table-hover">

  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
      <th>Kategoria</th>
      <th>Obrazek</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.category.name if idea.category.present? %></td>
        <td><%= image_tag(idea.picture_url, :width => 60) if idea.picture.present? %> </td>
        <td><%= link_to 'Pokaż', idea %></td>
        <td><%= link_to 'Edytuj', edit_idea_path(idea) %></td>
        <td><%= link_to 'Usuń', idea, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

